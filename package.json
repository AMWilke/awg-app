{
    "name": "awg-app",
    "version": "0.7.4",
    "license": "MIT",
    "author": {
        "name": "Stefan MÃ¼nnich",
        "email": "<stefan.muennich@unibas.ch>"
    },
    "description": "Prototype Web Application for the Online Edition of the Anton Webern Gesamtausgabe (Musicological Seminar of the University of Basel)",
    "keywords": [
        "angular",
        "anton-webern",
        "digital-musicology",
        "digital-music-edition",
        "digital-humanities",
        "edition"
    ],
    "repository": {
        "type": "git",
        "url": "git@github.com:webern-unibas-ch/awg-app.git"
    },
    "homepage": "https://edition.anton-webern.ch",
    "bugs": "",
    "private": true,
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "e2e": "ng e2e",
        "test": "ng test",
        "test:cov": "ng test --code-coverage true",
        "serve:test:cov": "npx http-server -c-1 -o -p 9875 ./coverage",
        "test:ci": "yarn test:cov --watch=false --browsers=ChromeHeadlessNoSandbox",
        "lint": "ng lint awg-app",
        "tslint-check": "tslint-config-prettier-check ./tslint.json",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "format:fix": "pretty-quick --staged",
        "doc": "yarn compodoc -p tsconfig.app.json --theme Readthedocs -d dist/compodoc",
        "serve:doc": "yarn doc -s -w",
        "build:doc": "yarn doc",
        "build": "ng build",
        "build:prod": "yarn build --prod --aot=false",
        "postbuild:prod": "run-s gzip:dist build:doc",
        "build:gh": "cross-var yarn build:prod --base-href $npm_package_homepage",
        "gzip:dist": "gzipper ./dist",
        "prewpanalyzer": "yarn build:prod --statsJson",
        "wpanalyzer": "webpack-bundle-analyzer dist/stats-es2015.json",
        "presourcemap": "yarn build:prod --sourceMap",
        "sourcemap": "source-map-explorer dist/*.js",
        "build:css": "./themes/bin/build-css",
        "watch:css": "./themes/bin/watch-css",
        "build:css-win": "node-sass --include-path src/assets/themes/scss src/assets/themes/scss/main.scss src/assets/themes/css/main.css",
        "watch:css-win": "nodemon -e scss -x \"npm run build-css-win\" ",
        "pre-release": "standard-version -a",
        "update-appversion": "cross-var ./version.sh $npm_package_version $npm_package_homepage",
        "release:gh": "cross-var ngh --cname=edition.anton-webern.ch --message \"Release $npm_package_name (v$npm_package_version) on gh-pages\" ",
        "deploy": "run-s build:gh release:gh",
        "predeploy:ci": "yarn build:gh",
        "deploy:ci": "yarn release:gh --repo=https://${GITHUB_TOKEN}@github.com/webern-unibas-ch/awg-app.git"
    },
    "standard-version": {
        "scripts": {
            "postbump": "yarn update-appversion"
        },
        "skip": {
            "tag": true
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "run-s -l format:fix lint",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "jsxBracketSameLine": true,
        "arrowParens": "avoid"
    },
    "dependencies": {
        "@angular/animations": "~10.0.4",
        "@angular/common": "~10.0.4",
        "@angular/compiler": "~10.0.4",
        "@angular/core": "~10.0.4",
        "@angular/forms": "~10.0.4",
        "@angular/localize": "10.0.4",
        "@angular/platform-browser": "~10.0.4",
        "@angular/platform-browser-dynamic": "~10.0.4",
        "@angular/platform-server": "~10.0.4",
        "@angular/router": "~10.0.4",
        "@ctrl/ngx-codemirror": "^4.0.0",
        "@fortawesome/angular-fontawesome": "^0.7.0",
        "@fortawesome/fontawesome-svg-core": "^1.2.30",
        "@fortawesome/free-solid-svg-icons": "^5.14.0",
        "@kolkov/ngx-gallery": "^1.2.3",
        "@ng-bootstrap/ng-bootstrap": "^7.0.0",
        "bootstrap": "^4.5.0",
        "codemirror": "^5.55.0",
        "core-js": "^3.6.5",
        "d3-drag": "^1.2.5",
        "d3-force": "^2.0.1",
        "d3-selection": "^1.4.1",
        "d3-zoom": "^1.8.3",
        "font-awesome": "^4.7.0",
        "json2typescript": "^1.4.1",
        "n3": "^1.5.0",
        "ngx-json-viewer": "^2.4.0",
        "rdfstore": "^0.9.17",
        "rxjs": "~6.5.4",
        "snapsvg": "^0.5.1",
        "stream": "^0.0.2",
        "tslib": "^2.0.0",
        "zone.js": "~0.10.2"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.1000.3",
        "@angular/cli": "~10.0.3",
        "@angular/compiler-cli": "~10.0.4",
        "@angular/language-service": "~10.0.4",
        "@commitlint/cli": "^9.1.1",
        "@commitlint/config-angular": "^9.1.1",
        "@compodoc/compodoc": "^1.1.11",
        "@types/d3": "^5.7.2",
        "@types/jasmine": "~3.5.0",
        "@types/jasminewd2": "~2.0.3",
        "@types/node": "^12.11.1",
        "angular-cli-ghpages": "^0.6.2",
        "codelyzer": "^6.0.0",
        "conventional-recommended-bump": "^6.0.9",
        "cross-var": "^1.1.0",
        "gzipper": "^4.0.0",
        "husky": "^4.2.5",
        "jasmine-core": "~3.5.0",
        "jasmine-spec-reporter": "~5.0.0",
        "karma": "~5.0.0",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage-istanbul-reporter": "~3.0.2",
        "karma-jasmine": "~3.3.0",
        "karma-jasmine-html-reporter": "^1.5.0",
        "node-sass": "^4.14.1",
        "nodemon": "^2.0.4",
        "npm-run-all": "^4.1.5",
        "prettier": "~2.0.5",
        "pretty-quick": "^2.0.1",
        "protractor": "~7.0.0",
        "source-map-explorer": "^2.4.2",
        "standard-version": "^8.0.2",
        "ts-node": "~8.10.2",
        "tslint": "~6.1.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "~3.9.7",
        "webpack-bundle-analyzer": "^3.8.0"
    },
    "engines": {
        "node": ">= 8.9.0",
        "npm": ">= 5.5.1",
        "yarn": "^1.10.0"
    }
}
